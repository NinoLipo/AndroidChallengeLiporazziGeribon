<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suggestions"
    android:background="@color/background"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="0dp"
        android:text="HOLA"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/details"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:cardBackgroundColor="@color/background">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|left"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="198dp"
            />
        <TextView
            android:id="@+id/tvParticipantsView"
            android:layout_width="223dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical|center"
            android:textAlignment="center"
            android:text="@string/participants"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="70dp"
            android:background="@color/background"/>
        <TextView
            android:id="@+id/tvParticipantsQuantity"
            android:layout_width="88dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical|right"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="336dp"
            android:textSize="20sp"
            android:background="@color/background"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:cardBackgroundColor="@color/background">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|left"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="198dp"/>
        <TextView
            android:id="@+id/priceView"
            android:textSize="20sp"
            android:text="@string/priceview"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="70dp"
            android:background="@color/background"
            android:layout_width="223dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical|center"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvActivityPrice"
            android:layout_width="88dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical|right"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="336dp"
            android:textSize="20sp"
            android:background="@color/background"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btTryAnother"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:background="@color/details"
        android:text="@string/tryanother"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>