<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suggestions">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|left"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="198dp" />

        <TextView
            android:id="@+id/tvParticipantsView"
            android:layout_width="230dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|center"
            android:text="@string/participants"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/tvParticipantsQuantity"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="336dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|left"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="198dp" />

        <TextView
            android:id="@+id/tvParticipantsView2"
            android:layout_width="230dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|center"
            android:text="@string/price"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="336dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCategoria"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btTryAnother"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.284">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|left"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="198dp" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="230dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical|center"
            android:text="@string/price"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="70dp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btTryAnother"
        android:layout_width="149dp"
        android:layout_height="41dp"
        android:text="@string/tryanother"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
 />

</androidx.constraintlayout.widget.ConstraintLayout>